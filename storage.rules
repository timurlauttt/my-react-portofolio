rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // CV files - public read, authenticated write/delete
    match /cv/{filename} {
      allow read: if true;  // Anyone can download CV
      allow write: if request.auth != null;  // Only authenticated users can upload
      allow delete: if request.auth != null;  // Only authenticated users can delete
    }
    
    // Portfolio images - public read, authenticated write/delete
    match /portfolio/{filename} {
      allow read: if true;
      allow write: if request.auth != null;
      allow delete: if request.auth != null;
    }
    
    // About images - public read, authenticated write/delete
    match /about/{filename} {
      allow read: if true;
      allow write: if request.auth != null;
      allow delete: if request.auth != null;
    }
    
    // Activities images - public read, authenticated write/delete
    match /activities/{filename} {
      allow read: if true;
      allow write: if request.auth != null;
      allow delete: if request.auth != null;
    }
    
    // Fallback: deny all other paths
    match /{allPaths=**} {
      allow read: if false;
      allow write: if false;
    }
  }
}
